pipeline {
    agent {
        node {
            lable "built-in"
        }
    }
    
    stages {
        stage ('install') {
            steps {
                sh "yum install httpd -y"
            }
        }
        stage ('start') {
            steps {
                sh "service httpd start"
            }
        }
        stage ('create') {
            steps {
                "echo 'i am Rupesh' >> index.html"
            }
        }
        stage ('copy-file') {
            steps {
                sh "cp index.html /var/www/html/"
                sh "chmod 777 index.html"
            }
        }
    }
}
